@model StudyC.Models.User

@{
    ViewData["Title"] = "Create";
}

    <div class="container-contact1">
        <form asp-action="Login">
            <span class="contact1-form-title">
                התחבר
            </span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="containerLI">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" placeholder="הכנס שם משתמש" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>

                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" placeholder="הכנס סיסמא" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>

                <label id="checkLI">
                    <input type="checkbox" checked="checked" asp-for="RememberMe" name="remember"> זכור אותי
                </label>
                <div class="form-group">
                    <input type="submit" value="התחבר" class="buttonLI" />
                </div>

                @if (ViewData["Error"] != null)
                {
                    <div class="errorView">@ViewData["Error"]</div>

                }
                <span class="pswLI">שכחת <a class="link_buttonLI"  onclick="alert('סיסמא חלופית נשלחה למייל')">סיסמא?</a></span>
            </div>
            <br />
            <div >

                <span class="pswLI">
                    אין לך חשבון עדיין? <a class="link_buttonLI"
                                           asp-action="Create" style="width:auto;">הירשם</a>
                </span>
            </div>
        </form>
    </div>
 @section Css{
            <link rel="stylesheet" href="~/css/Users/Create.css" />
        }

