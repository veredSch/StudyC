<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <title>@ViewData["Title"] - StudyC</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/css/style_nav.css">
    @RenderSection("Css", required: false)

</head>
<body dir="rtl">
    <header>
        <nav class="navbar">
            <span class="navbar-toggle" id="js-navbar-toggle">
                <i class="fas fa-bars"></i>
            </span>
            <a href="home.html" class="logo"><img src="~/img/logo.png" width="60%" height="30%" alt="logo"></a>
            <ul class="main-nav" id="js-menu">
                <li>
                    <a href="#" class="nav-links active">דף הבית</a>
                </li>
                <li>
                    <a href="about.html" class="nav-links">אודות</a>
                </li>
                <li>
                    <a href="what_learn.html" class="nav-links">לימוד</a>
                </li>
                <li>
                    <a href="contact.html" class="nav-links">צור קשר</a>
                </li>
                <li>
                    <a href="contact.html" class="nav-links">הירשם/התחבר</a>
                </li>
                <li>
                    <form class="formNav" action="">
                        <input class="inputNav" type="search">
                        <i class="fa fa-search"></i>
                    </form>
                </li>
            </ul>
        </nav>

    </header>
  

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        let mainNav = document.getElementById("js-menu");
        let navBarToggle = document.getElementById("js-navbar-toggle");

        navBarToggle.addEventListener("click", function () {
            mainNav.classList.toggle("active");
        });</script>


    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/all.js" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @RenderSection("scripts", required: false)
</body>
</html>
